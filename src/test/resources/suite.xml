<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.1.dtd" >
<suite name="SauceDemo Automation">
    <parameter name="browser" value="firefox"/>
    <parameter name="baseUrl" value="https://www.saucedemo.com/"/>
    <parameter name="productsPath" value="inventory.html"/>
    <parameter name="cartPath" value="cart.html"/>
    <parameter name="checkoutInfoPath" value="checkout-step-one.html"/>
    <parameter name="checkoutOverviewPath" value="checkout-step-two.html"/>
    <parameter name="checkoutCompletePath" value="checkout-complete.html"/>

    <test name="Purchase">
        <classes>
            <class name="com.globant.tests.PurchaseFlowTest"/>
        </classes>
    </test>

    <test name="Empty Cart">
        <classes>
            <class name="com.globant.tests.RemoveItemsFromCartTest"/>
        </classes>
    </test>

    <test name="Logout">
        <classes>
            <class name="com.globant.tests.LogoutTest"/>
        </classes>
    </test>
</suite>